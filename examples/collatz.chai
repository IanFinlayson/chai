def collatz(number Int) Int:
    var steps = 0
    while number != 1:
        println(number)
        if number % 2 == 0:
            number //= 2
        else:
            number = number * 3 + 1
        steps += 1
    return steps

def main():
    let number = 7
    let steps = collatz(number)
    println("Done in " + steps + " steps.")

